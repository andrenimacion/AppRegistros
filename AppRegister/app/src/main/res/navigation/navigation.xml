<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/qrReaderFragment">

    <fragment
        android:id="@+id/registerWeightActivity"
        android:name="com.example.myapplication.RegisterWeightActivity"
        android:label="fragment_register_weight_activity"
        tools:layout="@layout/fragment_register_weight_activity" >
        <action
            android:id="@+id/action_registerWeightActivity_to_qrReaderFragment"
            app:destination="@id/qrReaderFragment" />
        <argument
            android:name="userType"
            app:argType="com.example.myapplication.models.Jornalero" />
    </fragment>
    <fragment
        android:id="@+id/qrReaderFragment"
        android:name="com.example.myapplication.QrReaderFragment"
        android:label="fragment_qr_reader"
        tools:layout="@layout/fragment_qr_reader" >
        <action
            android:id="@+id/action_qrReaderFragment_to_userProfile"
            app:destination="@id/userProfile" />
        <action
            android:id="@+id/action_qrReaderFragment_to_registerWeightActivity"
            app:destination="@id/registerWeightActivity" />
    </fragment>
    <fragment
        android:id="@+id/userProfile"
        android:name="com.example.myapplication.UserProfile"
        android:label="fragment_user_profile"
        tools:layout="@layout/fragment_user_profile" >
        <action
            android:id="@+id/action_userProfile_to_qrReaderFragment"
            app:destination="@id/qrReaderFragment" />
        <argument
            android:name="userType"
            app:argType="com.example.myapplication.models.Jornalero" />
    </fragment>
</navigation>